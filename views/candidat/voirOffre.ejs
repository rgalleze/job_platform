<%- include("../partials/header.ejs")%>

  <body>

    <%- include("../partials/navbar.ejs")%>
      <div class="container">
        <div class="mb-5 mt-5 align-self-center">
          <h1> Trouver votre job de rêve !</h1>
          <h6>Vous cherchez un travail ? Parcourez nos dernières offres d'emploi et postulez aux meilleurs emplois
            aujourd'hui.</h6>
        </div>
        <div class="card mb-3 mt-5">
          <div class="card-header">
            <h6>
              <%= result.fichePoste.intitule %> - <%= result.organisation.nom %>
            </h6>
          </div>
          <div class="card-body">
            <!-- <h5 class="card-title">Special title treatment</h5> -->
            <h6>Salaire : <%= result.fichePoste.fourchette_min %> EUR - <%= result.fichePoste.fourchette_max %> EUR</h6>
            <h6>Rythme : <%= result.fichePoste.rythme %>
            </h6>

            <p class="card-text">Description : <%- result.fichePoste.description %></p>
            
              <a href="<%= result.offre.num_offre%>/postuler" class="btn btn-outline-primary">Candidater</a>
              

          </div>
          <div class="card-footer text-muted">
            <%= result.fichePoste.date_ajout.toLocaleDateString("fr") %>
          </div>
        </div>
        
          



      </div>

      <%- include("../partials/footer.ejs")%>