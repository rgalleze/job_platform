<%- include("../partials/header.ejs")%>

    <body>

        <%- include("../partials/navbar.ejs")%>
            <div class="container d-flex justify-content-center align-items-center" style="height:80vh;">
                <form method='POST' >
                    <h2>Créer une offre</h2>
                    <div class="row g-3">
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Intitulé</label>
                            <input name='intitule' type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Responsable</label>
                            <input name='responsable' type="text" class="form-control">
                        </div>
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Type métier</label>
                            <input name='typeMetier' type="text" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Rythme</label>
                            <input name='rythme' type="text" class="form-control">
                        </div>
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Salaire min</label>
                            <input name='fourchetteMin' type="number" class="form-control">
                        </div>
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Salaire max</label>
                            <input name='fourchetteMax' type="number" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                            <textarea name='description' class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Date validité</label>
                            <input name='date_validite'type="date" class="form-control">
                        </div>
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">État</label>
                            <input name='etat' type="text" class="form-control">

                        </div>
                        <div class="col-sm mb-3">
                            <label for="exampleInputName" class="form-label">Pièces deamndées</label>
                            <input name='pcsDemandees' type="text" class="form-control">

                        </div>
                        <div class="mb-3">
                            <button class="w-100 btn btn-success" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i>
                                Créer</button>
                        </div>

                    </div>





                </form>
            </div>
            <%- include("../partials/footer.ejs")%>